<style type="text/css">
  .item {
    cursor: pointer;
  }

  tr:hover {
          background-color: #08E8DE;
        }

        textarea {
      background: transparent;
      resize: none;
      border: 0 none;
      width: 100%;
      outline: none;
    }

    select {
    border: none;
    background-color: transparent;
}

 a:hover {background-color:transparent;color: maroon}
   
</style>

<div class="ui fluid container" style="padding-top: 3%;padding-bottom: 3%;padding-left: 3%;padding-right: 8%;position: fixed;top: 0;z-index: 10;background-color: white">
    <div class="ui grid">
        <div class="row">
            <div class="ui seven wide column" style="font-size: 30px">
                campus animals
            </div>
            <div class="ui nine wide column" style="text-align: right; font-size: 15px">
                    <a href="/viewprofiles">browse profiles </a> &nbsp;&nbsp;&nbsp;&nbsp;  
                    <a href="#">add/edit profiles </a>&nbsp;&nbsp;&nbsp;&nbsp;
                logout
            </div>
        </div>
    </div>
</div>

<div class="ui fluid container" style="padding-top: 6%;padding-left: 3%;padding-right: 3%">
  <div style="font-size: 30px">
    PROFILES
  </div>
</div>

<div class="ui fluid container" style="padding-top: 1%;padding-left: 3%;padding-right: 3%;font-size: 12px">
  <table class="ui small compact table">
      <thead>
        <tr>
            <th width="15%">name</th>
            <th>species</th>
            <th width="2%">gender</th>
            <th>color</th>
            <th>markings</th>
            <th>location</th>
            <th width="2%">neutered</th>
            <th width="2%">vaccinated</th>
            <th width="2%">adopted</th>
            <th>remarks</th>
            <th>cage label</th>
            <th></th>
        </tr>
      </thead>
      <tbody>
        <% @animalprofiles.each do |animalprofile| %>
          <tr>
            <td><%= animalprofile.name %></td>
            <td><%= animalprofile.species %></td>
            <td><%= animalprofile.gender %></td>
            <td><%= animalprofile.color %></td>
            <td><%= animalprofile.markings %></td>
            <td><%= animalprofile.location %></td>
            <td><%= animalprofile.neutered %></td>
            <td><%= animalprofile.vaccinated %></td>
            <td><%= animalprofile.adopted %></td>
            <td><%= animalprofile.remarks %></td>
            <td><%= animalprofile.cagelabel %></td>

            <td>
              <%= link_to edit_animalprofile_path(animalprofile) do%>
                <i class="edit icon"></i>
              <% end %>
              <%= link_to animalprofile, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="ui trash icon"></i>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>

<div class="ui fluid container" style="position: fixed; bottom: 0;width: 100%; height: 15%;z-index: 10;padding-left: 3%;padding-right: 8%;">
  <div class="ui grid" style="">
    <div class="row" style="padding-top: 5%;">
      <div class="ui three wide column" style="">
        <div class="ui horizontal link list">
          <div class="item" style="color: black;">
            <u> switch to view only mode </u>
          </div>
        </div>  
      </div>
      <div class="ui thirteen wide column" style="text-align: right;">
        <div class="ui horizontal link list">
          <div class="add item" style="color: black;">
            <u> <a href="/animalprofiles/new" style="color: black;">add a new profile</a> </u>
          </div>
          <div class="item" style="color: black;">
            <u> select all </u>
          </div>
          <div class="item" style="color: black;">
            <u> delete all </u>
          </div>
          <div class="item" style="color: black;">
            <u> save to database </u>
          </div>
        </div>  
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">

  $("tr").click(function(event) {
    $("tr").css('background-color','white');
    $(this).css('background-color','#08E8DE');
  });

  $(".add").click(function(event) {
    //alert("hello");
    //$(".addform").toggle("");
    //jump to end of page -- where the input boxes for adding a new profile are
  });

  autosize($('textarea'));

  $(document).on('keypress',function(e) {
    mydata= 'data[name]=Basha&data[gender]=f'
      if(e.which == 13) {     
        Rails.ajax({
        type: "POST", 
          url: "/animalprofile/add",
          data: mydata,
          complete: function(repsonse){
            alert('added');
          }
      });
      }
  });

  $("tr").dbclick(function(event) {
    alert('double click');
  });


</script>

