<%= form_with(model: animalprofile) do |form| %>
  <% if animalprofile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(animalprofile.errors.count, "error") %> prohibited this animalprofile from being saved:</h2>

      <ul>
      <% animalprofile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <!--  <div class="field">
    animal ID
    <div class="ui fluid input"> <%= form.number_field :animalID %></div>
  </div>

  <div class="field">
    profile ID
    <div class="ui fluid input"> <%= form.number_field :profileID %> </div>
  </div> -->

  <div class="field">
    name
    <div class="ui fluid input"> <%= form.text_field :name %> </div>
  </div>

  <div class="field">
    species
    <div class="ui fluid input"> <%= form.text_field :species %> </div>
  </div>

  <div class="field">
    gender
    <div class="ui fluid input"> <%= form.text_field :gender %> </div>
  </div>

  <div class="field">
    color
    <div class="ui fluid input"> <%= form.text_field :color %> </div>
  </div>

  <div class="field">
    markings
    <div class="ui form">
    <textarea name="animalprofile[markings]" id="animalprofile_markings"> </textarea>
    </div>
  </div>

  <div class="field">
    location
    <div class="ui fluid input"> <%= form.text_field :location %></div>
  </div>

  <div class="field">
    neutered
    <div class="ui fluid input"> <%= form.text_field :neutered %> </div>
  </div>

  <div class="field">
    vaccinated
    <div class="ui fluid input"> <%= form.text_field :vaccinated %> </div>
  </div>

  <div class="field">
    adopted
    <div class="ui fluid input"> <%= form.text_field :adopted %> </div>
  </div>

  <div class="field">
    remarks
    <div class="ui form">
     <textarea name="animalprofile[remarks]" id="animalprofile_remarks"></textarea></div>
  </div>

  <div class="field">
    cage label
    <div class="ui fluid input"> <%= form.text_field :cagelabel %> </div>
  </div>

  <br>
  <div class="actions" style="text-align: right">
    <a href="/animalprofiles"><div class="ui basic blue button">BACK</div></a>
    <input class="ui blue button" type="submit" name="commit" value="Add Animal Profile" data-disable-with="Add Animal Profile" />
  </div>
<% end %>

