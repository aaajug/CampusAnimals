<%= form_with(model: animalprofile) do |form| %>
  <% if animalprofile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(animalprofile.errors.count, "error") %> prohibited this animalprofile from being saved:</h2>

      <ul>
      <% animalprofile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

