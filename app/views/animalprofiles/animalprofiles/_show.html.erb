<div class="ui container" style="overflow-y: scroll;height: 50%;max-height: 50%;padding-left: 6%;padding-right: 4%; padding-top: 2%; padding-bottom: 3%">
     <div style="text-align: right;">
          <i class="ui large close icon"></i>
     </div>

     <div class="ui grid">
          <div class="row">
               <div class="seven wide column">
                    <div class="ui image">
                         <img style='width: 200px;height: 200px' src="/assets/uploads/upload/image/<%= animalprofile.name %>/image.jpg">
                    </div>
               </div>

               <div class="ui bottom aligned five wide column">
                    <%if animalprofile.neutered == '1' %>
                            <i class="ui blue check icon"></i>
                          <% else animalprofile.neutered == '0' %>
                            <i class="ui close disabled icon"></i>
                          <% end %> 
                            neutered

                          <br>
                        <%if animalprofile.vaccinated == '1' %>
                <i class="ui blue check icon"></i>
              <% else animalprofile.vaccinated == '0' %>
                <i class="ui close disabled icon"></i>
              <% end %>
                vaccinated
              <br>
                        <%if animalprofile.adopted == '1' %>
                <i class="ui blue check icon"></i>
              <% else animalprofile.adopted == '0' %>
                <i class="ui close disabled icon"></i>
              <% end %>
                adopted
               </div>
          </div>
     </div>

     <br>

     <div style="font-weight: bolder;font-size: 30px"><%= @animalprofile.name.upcase %></div>
     <div style="font-weight: lighter;font-size: 13px;margin-bottom: 1%"><i><%= @animalprofile.gender.upcase %>, <%= @animalprofile.species.upcase %></i></div>

     <div style="font-weight: bolder;font-size: 13px;text-decoration: underline;"><i><b>COLOR</b></i></div>
     <div style="font-weight: lighter;font-size: 11px;margin-bottom: 1%"><%= @animalprofile.color.downcase %></div>

     <div style="font-weight: bolder;font-size: 13px;text-decoration: underline;"><i><b>MARKINGS</b></i></div>
     <div style="font-weight: lighter;font-size: 11px;margin-bottom: 1%"><%= @animalprofile.markings.downcase %></div>

     <div style="font-weight: bolder;font-size: 13px;text-decoration: underline;"><i><b>LOCATION</b></i></div>
     <div style="font-weight: lighter;font-size: 11px;margin-bottom: 1%"><%= @animalprofile.location.downcase %></div>

     <div style="font-weight: bolder;font-size: 13px;text-decoration: underline;"><i><b>REMARKS</b></i></div>
     <div style="font-weight: lighter;font-size: 11px;margin-bottom: 1%"><%= @animalprofile.remarks.downcase %></div>

     <div style="font-weight: bolder;font-size: 13px;text-decoration: underline;"><i><b>CAGE LABEL</b></i></div>
     <div style="font-weight: lighter;font-size: 11px;margin-bottom: 1%"><%= @animalprofile.cagelabel.downcase %></div>

</div>